{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "label": "Cargo Run",
      "command": "run",
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "cargo",
      "label": "Cargo Test",
      "command": "test",
      "args": [
        "--color=always",
        "--",
        "--nocapture",
        "--color=always",
        "-q"
      ],
      "env": {
        "DEVTEST": "true"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      },
      "group": "test"
    },
    {
      "label": "Cargo Test Active File",
      "type": "cargo",
      "command": "test",
      "args": [
        "${fileBasenameNoExtension}",
        "--color=always",
        "--",
        "--nocapture",
        "--color=always",
        "-q"
      ],
      "env": {
        "DEVTEST": "true"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      },
      "group": "test"
    },
    {
      "label": "Cargo Review Snapshot",
      "type": "shell",
      "command": "cargo insta review",
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Cargo Test Active File",
      "type": "cargo",
      "command": "test",
      "args": [
        "${fileBasenameNoExtension}",
        "--color=always",
        "--",
        "--nocapture",
        "--color=always",
        "-q"
      ],
      "env": {
        "DEVTEST": "true"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "clear": true
      },
      "group": "test"
    }
  ]
}
