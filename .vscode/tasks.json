{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "label": "Cargo Run",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "cargo",
      "label": "Cargo Test",
      "command": "test",
      "args": ["--color=always", "--", "--nocapture", "--color=always", "-q"],
      "env": {
        "DEVTEST": "true"
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      },
      "group": "test"
    },
    {
      "label": "Cargo Test Active File",
      "type": "cargo",
      "command": "test",
      "args": [
        "${fileBasenameNoExtension}",
        "--",
        "--color=always",
        "--nocapture",
        "-q"
      ],
      "env": {
        "DEVTEST": "true"
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      },
      "group": "test"
    },
    {
      "label": "Cargo Accept Snapshot",
      "type": "shell",
      "command": "cargo insta accept",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Test active file and accept snapshot",
      "type": "shell",
      "command": "cargo test ${fileBasenameNoExtension} -- --nocapture --color=always -q || cargo insta accept",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "clear": true
      }
    }
  ]
}
